@model IEnumerable<BugTrackerV2.Models.ProjectPMViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Project.Name)
        </th>
        <th>
            Project Manager
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
        @if (item.ProjectManager != null)
        {
            @Html.DisplayFor(modelItem => item.ProjectManager.FirstName) @Html.DisplayFor(modelItem => item.ProjectManager.LastName)
        }
        {
            Not Assigned
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Project.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Project.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Project.Id })
        </td>
    </tr>
}

</table>
